<h1>Listing clients</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Balance</th>
  </tr>

<% for client in @clients %>
  <tr>
    <td><%=h client.name %></td>
    <td><%=number_to_currency client.balance %></td>
    <td><%= link_to 'Billing Details', client_line_items_path(client) %></td>
    <td><%= link_to 'Client Details', client %></td>
    <td><%= link_to 'Edit', edit_client_path(client) %></td>
    <td><%= link_to 'Destroy', client, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

