= error_messages_for :user

- form_for(@user) do |f|

  %p
    %b Name
    %br
    = f.text_field :login
    
  %p
    %b Email Address
    %br
    = f.text_field :email
    
  %p
    %b Password
    %br
    = f.password_field :password
    
  %p
    %b Confirm Password
    %br
    = f.password_field :password_confirmation
    
  %p
    %b Default Rate/Hour
    %br
    $
    = f.text_field :rate
    
  %p
    %b Custom color
    %br
    \#
    = f.text_field :color
    
  %p= f.submit @user.new_record? ? "Create" : "Update"
  
%p= link_to 'cancel', users_path
