<% content_for :title do %>
  New line_item
<% end %>

<%= error_messages_for :line_item %>

<% form_for(@line_item, :url => line_items_path(@client)) do |f| %>
  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>

  <p>
    <b>Start</b><br />
    <%= f.datetime_select :start %>
  </p>

  <p>
    <b>End</b><br />
    <%= f.datetime_select :finish %>
  </p>

  <p>
    <b>Rate</b><br />
    <%= f.text_field :rate %>
  </p>

  <p>
    <b>Notes</b><br />
    <%= f.text_area :notes %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', line_items_path(@client) %>
