<h1>Editing line_item</h1>

<%= error_messages_for :line_item %>

<% form_for @line_item, :url => line_item_path(@client, @line_item) do |f| %>
  <p>
    <b>User</b><br />
    <%= f.select :user_id, User.to_select %>
  </p>

  <p>
    <b>Start</b><br />
    <%= f.datetime_select :start %>
  </p>

  <p>
    <b>End</b><br />
    <%= f.datetime_select :finish %>
  </p>

  <p>
    <b>Rate</b><br />
    <%= f.text_field :rate %>
  </p>

  <p>
    <b>Notes</b><br />
    <%= f.text_area :notes %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', line_items_path(@client) %>
