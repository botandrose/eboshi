<% content_for :title do %>
  Listing invoices
<% end %>

<table>
  <tr>
    <th>Client</th>
    <th>Total</th>
  </tr>

<% for invoice in @invoices %>
  <tr>
    <td><%=h invoice.client_id %></td>
    <td><%=h invoice.total %></td>
    <td><%= link_to 'Show', invoice_path(@client, invoice) %></td>
    <td><%= link_to 'Edit', edit_invoice_path(@client, invoice) %></td>
    <td><%= link_to 'Destroy', invoice_path(@client, invoice), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New invoice', new_invoice_path(@client) %>
